{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Casual",
	"scopeName": "source.cas",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comment"
		},
		{
			"include": "#int"
		},
		{
			"include": "#float"
		},
		{
			"include": "#bool"
		},
		{
			"include": "#string"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.casual",
				"match": "\\b(if|else|while|while|return|import|decl|def)\\b"
			}]
		},
		"comment": {
			"name": "comment.line.number-sign",
			"begin": "#",
			"end": "$"
		},
		"int": {
			"patterns": [
				{
					"match": "\\b((0x[0-9a-fA-F]+)|(0[0-7]+i?)|(\\d+([Ee]\\d+)?i?)|(\\d+[Ee][-+]\\d+i?))\\b",
					"name": "constant.numeric.integer.casual"
				}
			]
		},
		"float": {			
			"patterns": [
				{
					"match": "(\\.\\d+([Ee][-+]\\d+)?i?)\\b|\\b\\d+\\.\\d*(([Ee][-+]\\d+)?i?\\b)?",
					"name": "constant.numeric.float.casual"
				}
			]
		},
		"bool": {			
			"patterns": [
				{
					"match": "\\b(true|false)\\b",
					"name": "constant.language.casual"   				
				}
			]
		},
		"string": {
			"name": "string.quoted.double.casual",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.casual",
					"match": "\\\\."
				}
			]
		}
	}
}